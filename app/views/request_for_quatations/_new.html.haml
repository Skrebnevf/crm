= simple_form_for(@request_for_quatation, html: one_submit_only, remote: true) do |f|
  = link_to_close new_request_for_quatation_path
  = f.hidden_field :user_id

  = f.error_messages object_name: t('request_for_quatation')

  = render "request_for_quatations/top_section", f: f

  .buttonbar
    = f.submit t(:create_request_for_quatation), class: 'btn btn-primary'
    #{t :or}
    = link_to_cancel new_request_for_quatation_path
