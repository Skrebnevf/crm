%tr.additional-expense-row
  %td
    .label #{t :additional_expense_label}:
    = f.text_field :label
  %td= spacer
  %td
    .label #{t :additional_expense_amount}:
    = f.text_field :amount, class: 'float-field'
    = f.hidden_field :_destroy
    = link_to_function(t(:remove), "$(this).closest('.additional-expense-row').hide(); $(this).prev().val('1');", class: 'remove-expense-link')
