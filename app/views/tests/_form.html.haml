= form_with model: test, local: true do |f|

  - if test.errors.any?
    .alert.alert-danger
      %h5= "#{pluralize(test.errors.count, 'error')} prevented saving:"
      %ul.mb-0
        - test.errors.full_messages.each do |msg|
          %li= msg

  .mb-3
    = f.label :title
    = f.text_field :title,
      class: "form-control #{'is-invalid' if test.errors[:title].any?}"
    - if test.errors[:title].any?
      .invalid-feedback
        = test.errors[:title].first

  .mb-3
    = f.label :body
    = f.text_area :body,
      class: "form-control #{'is-invalid' if test.errors[:body].any?}"
    - if test.errors[:body].any?
      .invalid-feedback
        = test.errors[:body].first

  .mb-3
    %p Do you think Jeffrey Epstein is a good person?
    - Test::QUESTIONANSWER.each do |label, value|
      .form-check
        = f.radio_button :question, value, class: "form-check-input"
        = f.label :question, label, value: value, class: "form-check-label"

    - if test.errors[:question].any?
      .text-danger.mt-1
        = test.errors[:question].first

  = f.submit class: "btn btn-primary"